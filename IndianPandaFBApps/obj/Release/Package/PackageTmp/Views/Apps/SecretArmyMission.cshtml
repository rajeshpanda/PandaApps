
@{
    ViewBag.Title = "Secret Army Mission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/custom/getTerroristKills.js"></script>

<style type="text/css">
    .reportKills {
        color: #e81f23;
    }
    
</style>
<div class="row">
    <div id="pageDetails" class="col-md-7" style="width:60%;float:left">
        <h1 style="font-family:hvdArmy">How many terrorists will you KILL this year?</h1>
        <div align="center" style="max-height:200px">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- app break 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-5899404255168482"
                 data-ad-slot="6557742256"
                 data-ad-format="auto"></ins>
            <script>
(adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        <div id="calculation-container">
            <h2 class="hide-on-generate" id="page_message">Click on Generate to know your result.</h2>
            <button class="btn-lg login-btn hide-on-generate" style="background:rgba(59, 89, 152, 1.00);color:white;margin-top:2px;" onclick="getTerroistCount()">Generate</button>
            
            <div class="show-on-fetching" hidden>
                <h5>1. Fetching your profile details</h5>
            </div>
            <div class="show-on-generating" hidden>
                <h5>2. Calculating your result</h5>
            </div>
            <div class="loader" hidden></div>

        </div>

        <br />
        <h5 class="publish" hidden>Click on Publish to to share your result on Facebook</h5><br />
        <button class="btn-lg publish col-md-3" style="background:rgba(59, 89, 152, 1.00);color:white;margin-top:2px;" onclick='publish("http://apps.rajeshpanda.in/Apps/SecretArmyMission", $("#main-content-img").attr("src"), $("#descriptionText").html())' hidden>Publish</button>
        &nbsp;
        <button class="btn-lg publish col-md-3" style="display:none;margin-top:2px;margin-left:2px" onclick="goToAllApps()" hidden>More Apps</button>
        <br />
        <br />
        <div div="presentation-container" style="max-width:600px;">
            <img id="main-content-img" style="max-height:100%;max-width:100%;display:block;margin:2px" src="~/Content/Images/sample_terroristKill.jpg" />
            <text id="descriptionText" hidden></text>
        </div>
    </div>
    
    <div class="col-md-5" id="otherApps" style="width:40%;float:right"></div>

</div>
<br />
<div align="center">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- app-break2 -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-5899404255168482"
         data-ad-slot="7696398254"
         data-ad-format="auto"></ins>
    <script>
(adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>
